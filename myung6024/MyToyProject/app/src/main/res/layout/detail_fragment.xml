<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="presenter"
            type="com.runeanim.mytoyproject.ui.detail.DetailPresenter" />

        <variable
            name="owner"
            type="com.runeanim.mytoyproject.data.model.Owner" />

        <variable
            name="repo"
            type="com.runeanim.mytoyproject.data.model.Repository" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:paddingRight="8dp"
        android:paddingBottom="12dp">

        <ViewStub
            android:id="@+id/controller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inflatedId="@+id/controller"
            android:layout="@layout/detail_content"
            android:visibility="@{presenter.dataLoading ? View.GONE : View.VISIBLE}"
            app:owner="@{owner}"
            app:repo="@{repo}"/>

        <ProgressBar
            android:id="@+id/pbActivityRepository"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{presenter.dataLoading ? View.VISIBLE : View.GONE}" />

        <TextView
            android:id="@+id/tvActivityRepositoryMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/githubBlack" />

    </RelativeLayout>
</layout>
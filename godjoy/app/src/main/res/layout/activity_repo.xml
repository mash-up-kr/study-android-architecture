<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.RepoActivity"
        android:orientation="vertical"
>

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp">
        <ImageView
                android:id="@+id/img_repo_activity"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
        />

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_repo_activity"
                android:layout_centerInParent="true"
        >
            <TextView
                    android:id="@+id/tv_name_repo_activity"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="user" android:textStyle="bold" android:textSize="18sp"
            />

            <TextView
                    android:id="@+id/tv_repo_name_repo_activity"
                    android:layout_toEndOf="@id/tv_name_repo_activity"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="/repoName" android:textStyle="bold" android:textSize="18sp"
            />

            <ImageView
                    android:id="@+id/icn_star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/tv_name_repo_activity"
                    android:src="@drawable/ic_star_black"
            />
            <TextView
                    android:id="@+id/tv_stars_repo_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name_repo_activity"
                    android:layout_toEndOf="@id/icn_star"
                    android:text="stars"
            />
        </RelativeLayout>

    </RelativeLayout>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f0f0f0f0"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
    >
        <ImageView
                android:id="@+id/icn_description"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_description_black"
        />
        <TextView
                android:id="@+id/tv_description_repo_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toEndOf="@id/icn_description"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_description_repo_activity"
                android:layout_toEndOf="@id/icn_description"
        />
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f0f0f0f0"/>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
    >
    <ImageView
            android:id="@+id/icn_language"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_language_black"
    />
    <TextView
            android:id="@+id/tv_language_repo_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toEndOf="@id/icn_language"
    />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_language_repo_activity"
                android:layout_toEndOf="@id/icn_language"
        />
    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f0f0f0f0"/>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
    >
    <ImageView
            android:id="@+id/icn_updateTime"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_update_black"
    />
    <TextView
            android:id="@+id/tv_updateDate_repo_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/icn_updateTime"
            android:textStyle="bold"
    />
        <TextView
                android:id="@+id/tv_updateTime_repo_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_updateDate_repo_activity"
                android:textStyle="bold"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Update"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_updateTime_repo_activity"
                android:layout_toEndOf="@id/icn_updateTime"
        />
    </RelativeLayout>
</LinearLayout>